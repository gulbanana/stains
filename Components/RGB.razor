@inherits Connected

<svg viewBox="0 0 300 100">
    <rect x="0" y="0" width="300" height="100" fill="rgb(@(State.r.Value*255), @(State.g.Value*255), @(State.b.Value*255))" />
    <text y="45">
        <tspan x="20" dy="0em">@(State.rname)</tspan>
        <tspan x="20" dy="1em">@(State.r.Value.ToString("0.####"))</tspan>
    </text>
    <text y="45">
        <tspan x="120" dy="0em">@(State.gname)</tspan>
        <tspan x="120" dy="1em">@(State.g.Value.ToString("0.####"))</tspan>
    </text>
    <text y="45">
        <tspan x="220" dy="0em">@(State.bname)</tspan>
        <tspan x="220" dy="1em">@(State.b.Value.ToString("0.####"))</tspan>
    </text>
</svg>